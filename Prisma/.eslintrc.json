{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "whitespace": [true, "check-module"],
        "no-unused-expression": false,
        "trailing-comma": [
        true, {
            "singleline": "never",
            "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "ignore",
            "typeLiterals": "ignore"
            }
        }
        ],
        "quotemark": [
        true,
        "single",
        "jsx-double"
        ],
        "semicolon": [true, "always"]
    }
}
